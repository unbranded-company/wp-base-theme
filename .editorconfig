root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[*.js]
indent_size = 2

[*.jsx]
indent_size = 2

[*.scss]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.yml]
indent_size = 2

[*.html]
indent_size = 2
